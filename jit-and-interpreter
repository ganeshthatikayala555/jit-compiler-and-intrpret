public class SumCalculator {
    public static void main(String[] args) {
        int n = 1000000; // Let's assume a large value
        
        int sum = 0;
        for (int i = 1; i <= n; i++) {
            sum += i;
        }
        
        System.out.println("Sum of the first " + n + " natural numbers: " + sum);
    }
}
